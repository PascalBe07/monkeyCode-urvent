<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyCode.Apps.Urvent.Portable.Views.EventView" Title="{Binding Path=Title}">
  <ScrollView>
    <StackLayout>
      <Label Text="{Binding Path=Event.Name}" FontSize="20"></Label>
      <Image Source="{Binding Path=Cover}" Aspect="AspectFill" HeightRequest="200" HorizontalOptions="Fill" >
      </Image>
      <StackLayout Orientation="Horizontal">
        <Label Text="{Binding Path=Event.StartDateTime}"></Label>
        <Label Text="{Binding Path=Event.EndDateTime}"></Label>
      </StackLayout>
      <Label Text="{Binding Path=Event.Description}"></Label>
    </StackLayout>
  </ScrollView>
</ContentPage>